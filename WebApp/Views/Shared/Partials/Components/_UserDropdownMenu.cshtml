<div class="custom-dropdown">
    <button id="settingsBtn" class="gear-button">
        <i class="fa-solid fa-gear"></i>
    </button>
    <div id="settingsMenu" class="custom-dropdown-menu">
        <div class="dropdown-user-info">
            <img src="/images/user-icon.svg" class="rounded-circle" width="32" height="32" alt="Profile" />
            <span>@User.FindFirst("FullName")?.Value</span>
        </div>
        <form asp-controller="Auth" asp-action="Logout" method="post" class="logout-form">
            <button type="submit" class="logout-btn">
                <i class="bi bi-box-arrow-right me-2"></i> Logout
            </button>
        </form>
    </div>
</div>